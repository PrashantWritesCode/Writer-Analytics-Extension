{
  "manifest_version": 3,
  "name": "Writer Analytics Extension",
  "version": "1.0.0",
  "description": "Collects basic story stats from Wattpad & Webnovel and shows them to authors.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://www.wattpad.com/*",
    "https://www.webnovel.com/*"
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_title": "Writer Analytics"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.wattpad.com/*",
        "https://www.webnovel.com/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png"],
      "matches": [
        "https://www.wattpad.com/*",
        "https://www.webnovel.com/*"
      ]
    }
  ]
}
