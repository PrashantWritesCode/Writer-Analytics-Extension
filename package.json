{
  "name": "writer-analytics-extension",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@types/chart.js": "^2.9.41",
    "@types/chrome": "^0.1.6",
    "esbuild": "^0.18.0"
  },
  "dependencies": {
    "chart.js": "^4.5.0"
  },
"scripts": {
    "build:content": "esbuild src/content.ts --bundle --outfile=dist/content.js --platform=browser --format=iife --sourcemap",
    "build:background": "esbuild src/background.ts --bundle --outfile=dist/background.js --platform=browser --format=esm --sourcemap",
    "build:popup": "esbuild src/popup.ts --bundle --outfile=dist/popup.js --platform=browser --format=esm --sourcemap",
    "build:files": "cp popup.html manifest.json dist/",
    "build": "npm run build:content && npm run build:background && npm run build:popup && npm run build:files"
  }
}
